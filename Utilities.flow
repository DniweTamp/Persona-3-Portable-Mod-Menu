void SetUpFavorites()
{
    MSG_WND_DSP();
    MSG( SetUp_Favorites );
    SET_MSG_VAR( 1, GET_COUNT( 24 ), 0 );
    SET_MSG_VAR( 2, GET_COUNT( 25 ), 0 );
    SET_MSG_VAR( 3, GET_COUNT( 26 ), 0 );
    SET_MSG_VAR( 4, GET_COUNT( 27 ), 0 );
    SET_MSG_VAR( 5, GET_COUNT( 28 ), 0 );
    SET_MSG_VAR( 6, GET_COUNT( 29 ), 0 );
    SEL_DEFKEY( PadButton.Circle, 999 );
    SEL_DEFKEY( PadButton.R, 998 );
    int selection = SEL( SelectFavorites );
    switch ( selection )
    {
        case 999://Cancel
            MSG_WND_CLS();
            break;
        case 998://Next Page
            SetUpFavorites1();
            break;
        case 0: MSG_WND_CLS(); SET_COUNT( 24, SelectNumber(4) ); break;
        case 1: MSG_WND_CLS(); SET_COUNT( 25, SelectNumber(4) ); break;
        case 2: MSG_WND_CLS(); SET_COUNT( 26, SelectNumber(4) ); break;
        case 3: MSG_WND_CLS(); SET_COUNT( 27, SelectNumber(4) ); break;
        case 4: MSG_WND_CLS(); SET_COUNT( 28, SelectNumber(4) ); break;
        case 5: MSG_WND_CLS(); SET_COUNT( 29, SelectNumber(4) ); break;
    }
}

